{
  "build" : {
    "-D"   : ["test=stx_makro","no-deprecation-warnings"],
    "-cp" : ["src/main/haxe","src/gen/haxe"],
    "-lib" : [
      "hscript",
      "tink_core","tink_macro",
      "stx_pico","stx_nano","stx_fn","stx_fp","stx_ds","stx_bake","stx_makro"
    ],
    "unit" : {
      "-main" : "Unit",
      "interp" : {
        "--interp" : true
      }
    },
    "boot" : {
      "--macro" : ["Main.boot()"],
      "-D" : ["make"],
      "-main" :  "Main",
      "--interp" : true
    },
    "test" : {
      "-L" : "stx_test",
      "-cp": "src/test/haxe", 
      "-D" : ["stx.log.filter.show=false"],
      "expr" : {
        "-main" : "stx.makro.expr.Test",
        "interp" : {
          "--interp" : true
        }
      },
      "g" : {
       "-main" : "stx.g.Test",
       "--interp" : true,
       "macro" :  {
         "-D" : "boot"
       }
      }
    }
}
}